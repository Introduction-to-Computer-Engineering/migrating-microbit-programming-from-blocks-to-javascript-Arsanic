input.onButtonPressed(Button.A, function () {
    basic.clearScreen()
    for (let index = 0; index <= 4; index++) {
        led.plot(index, Math.randomRange(0, 5))
    }
})
input.onButtonPressed(Button.B, function () {
    if (led.point(0, 0)) {
        basic.showLeds(`
            . . . . .
            . . . . .
            . . . . .
            # . . . #
            # # # # #
            `)
    } else {
        basic.showLeds(`
            . . . . .
            . # # # .
            . . . . .
            . . . . .
            . # # # .
            `)
    }
})
led.plot(3, 2)
led.plot(3, 1)
led.plot(3, 0)
led.plot(1, 0)
led.plot(1, 1)
led.plot(1, 2)
led.plot(0, 3)
led.plot(1, 4)
led.plot(2, 4)
led.plot(3, 4)
led.plot(4, 3)
basic.forever(function () {
    led.toggle(1, 1)
    led.toggle(1, 2)
    led.toggle(1, 0)
    led.toggle(2, 0)
    led.toggle(2, 1)
    led.toggle(2, 2)
    basic.pause(300)
    led.toggle(2, 0)
    led.toggle(2, 1)
    led.toggle(2, 2)
    led.toggle(3, 2)
    led.toggle(3, 0)
    led.toggle(3, 1)
    basic.pause(300)
})
